<%= form_with(model: @person, local: true) do |form| %>
  <pre style="font-size: 16pt">Введите e-mail участника*:       <%= form.text_field :ssilka %> </pre>
  <%= form.hidden_field :id_head, value: current_user.email %>
  <%= link_to 'Отмена', people_path %>
  <%= form.submit ( form.object.new_record? ? "Добавить участника" : "Упс, что-то пошло не так..."), class: "btn" %>
<% end %>